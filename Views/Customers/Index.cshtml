@model IEnumerable<LibApp.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    <a class="btn btn-primary" asp-action="New">New Customer</a>
</p>

@if (!Model.Any())
{
    <p>There are no customers yet.</p>
}
else
{
    <table id="customers" class="table table-hover">
        <thead>
        <tr>
            <th >Customer</th>
            <th>Membership Type</th>
            <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td><a asp-action="Edit" asp-route-id="@customer.Id">@Html.DisplayFor(modelItem => customer.Name)</a></td>
                <td>@customer.MembershipType.Name</td>
                <td>
                    <button class="btn btn-secondary js-delete" data-customer-id=@customer.Id>Delete</button> 
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@section Scripts 
{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {

    
                var button = $(this);
                console.log("ID: " + button.attr("data-customer-id"));
                if (confirm("Confirm customer deletion?")) {
                    $.ajax({
                        url: "/api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            console.log("Success");
                            button.parents("tr").remove();
                        }
                    });
                }
            });
        });
    </script>
}