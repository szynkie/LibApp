@model IEnumerable<LibApp.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    <a class="btn btn-primary" asp-action="New">New Customer</a>
</p>

@if (!Model.Any())
{
    <p>There are no customers yet.</p>
}
else
{
    <table id="customers" class="table table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td><a asp-action="Edit" asp-route-id="@customer.Id">@Html.DisplayFor(modelItem => customer.Name)</a></td>
                <td>@customer.MembershipType.DiscountRate</td>
                <td><button class="btn-link js-delete" data-customer-id=@customer.Id>Delete</button></td>
            </tr>
        }
        </tbody>
    </table>
}

@section Scripts 
{
    <script>
        $(document).ready(function() {
            $("#customers .js-delete").on("click", function () {
                if (confirm("Confirm customer deletion?")) {
                    console.log("ID: " + $(this).attr("data-customer-id"));
                    $.ajax({
                        url: "/api/customers/" + $(this).attr("data-customer-id"),
                        method: "DELETE",
                        success: function() {
                            console.log("Success");
                        }
                    });
                }
            });
        })
    </script>
}